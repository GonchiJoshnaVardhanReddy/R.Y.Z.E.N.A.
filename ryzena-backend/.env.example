# R.Y.Z.E.N.A. Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://ryzena:ryzena_dev_password@localhost:5432/ryzena"
POSTGRES_USER=ryzena
POSTGRES_PASSWORD=change_this_in_production
POSTGRES_DB=ryzena

# =============================================================================
# AUTHENTICATION - CRITICAL: Change in production!
# =============================================================================
# JWT secrets must be at least 64 characters in production
JWT_SECRET=dev_jwt_secret_change_this_in_production_64_chars_minimum_required
JWT_REFRESH_SECRET=dev_refresh_secret_change_this_in_production_64_chars_minimum_required
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# ENCRYPTION - CRITICAL: Change in production!
# =============================================================================
# AES-256 encryption key (64 hex characters = 32 bytes)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGINS=http://localhost:3000
AUDIT_LOGGING_ENABLED=true
MAX_BODY_SIZE=10485760
REQUEST_TIMEOUT=30000

# =============================================================================
# SECURITY THRESHOLDS
# =============================================================================
PHISHING_THRESHOLD=0.7
URL_HIGH_RISK_THRESHOLD=0.8

# =============================================================================
# OLLAMA (AI Service)
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=120000
OLLAMA_TEMPERATURE=0.3
OLLAMA_MAX_TOKENS=2048
OLLAMA_ENABLED=true

# =============================================================================
# RAG Configuration
# =============================================================================
RAG_KNOWLEDGE_PATH=./knowledge
RAG_VECTOR_STORE_PATH=./data/vectors
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=3

# =============================================================================
# PRIVACY (Phase 6)
# =============================================================================
K_ANONYMITY_THRESHOLD=5
PROHIBITED_FIELDS=studentId,email,name,ssn,phone,address,ipAddress

# =============================================================================
# CONSENT (Phase 5)
# =============================================================================
DEFAULT_CONSENT_DURATION_DAYS=30
MAX_CONSENT_DURATION_DAYS=365

# =============================================================================
# API Keys (for future integrations)
# =============================================================================
# VIRUSTOTAL_API_KEY=
# URLSCAN_API_KEY=
